<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= link_to "Add New Task", new_task_path %>

<ol>
<% @tasks.each do |task| %>
  <li><%= link_to task.name, task_path(task) %> - <%= task.details %> - <%= task.created_at %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ol>



